<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="80dp" android:padding="5dp">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:orientation="horizontal">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/home_menuitem_image" android:layout_gravity="center|top"
                android:src="@drawable/menu_add_customer"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_marginLeft="10dp">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/home_menuitem_Name" android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    android:textColor="@color/Dark_Gray"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/home_menuitem_Description" android:textColor="@color/Dark_Gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>