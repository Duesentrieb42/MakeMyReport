<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="180dp"
              android:layout_height="180dp" android:gravity="center_horizontal" android:padding="10dp"
              android:background="@drawable/roundrectangle">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:id="@+id/home_customer_image" android:layout_gravity="left|center_vertical"
            android:src="@drawable/customer"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="customername"
            android:id="@+id/home_customer_name" android:layout_gravity="left|center_vertical"
            android:textAlignment="gravity"
            android:gravity="center_horizontal"/>
</LinearLayout>